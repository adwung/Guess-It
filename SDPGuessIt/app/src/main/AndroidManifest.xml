<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.sdpguessit">

    <application
        android:name=".SDPGuessItApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TitleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".NewUserActivity" />
        <activity android:name=".createPuzzleActivity" />
        <activity android:name=".createTournamentActivity" />
        <activity android:name=".JoinTournamentActivity" />
        <activity android:name=".StatisticsMenuActivity" />
        <activity android:name=".PuzzleStatisticsActivity" />
        <activity android:name=".TournamentStatisticsActivity" />
        <activity android:name=".PlayerPuzzleStatisticsActivity" />
        <activity android:name=".PlayerTournamentStatisticsActivity" />
        <activity android:name=".TournamentMenuActivity" />
        <activity android:name=".ContinueTournamentActivity"></activity>
    </application>

</manifest>